@model WebApplication2.Entity.Item

@{
    ViewBag.Title = "Item";
}

<h2>Айтем</h2>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Имя</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            <p>Описание</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            <p>Id коллекции</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.collectionItId)
        </dd>

    </dl>
    <span>@Model.LikeItems.Count</span>
    @using (Html.BeginForm("LikeItem", "Home", FormMethod.Post))
    {
        <input type="hidden" name="itemId" id="itemId" value="@Model.id" />
        <button type="submit" class="btn btn-sm btn-outline-info">
            Like
        </button>
    }
    <h2>Комментарии</h2>
    @using(Html.BeginForm("Comment","Home"))
    {
    <input type="hidden" value="@Model.id" name="itemId" id="itemId" />
    <input type="text" name="text" id="text" />
    <input type="submit" value="Добавить" />
    }
    @foreach (var comment in Model.Comments)
    {
        <span style="color: red">@comment.ApplicationUser.UserName</span><span>@comment.text</span><br />
    }
</div>