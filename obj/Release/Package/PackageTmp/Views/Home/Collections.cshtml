@model List<WebApplication2.Entity.CollectionIt>

@{
    ViewBag.Title = "Collections";
}

<h2>Коллекции</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <table border="1">
            <tr><th>Название коллекции</th><th>Описание</th><th colspan="2">Редактирование</th></tr>
            @foreach (var collection in Model)
            {

                @*@foreach (var item in collection.Items)
                {*@
                @*<tr>
                    <td>
                        @Html.DisplayName(collection.Name)
                    </td>
                    <td>
                        @Html.DisplayName(collection.Description)
                    </td>
                </tr>*@

                <tr>
                    <td>
                        @collection.name
                    </td>
                    <td>
                        @collection.description
                    </td>



                    <td>
                        <form action="Delete" asp-route-id="@collection.id" method="post">
                            <input type="hidden" name="id" id="id" value="@collection.id" />
                            <button type="submit" class="btn btn-sm btn-outline-info">
                                Удалить
                            </button>
                        </form>
                    </td>
                    <td>
                        @using (Html.BeginForm("Collection", "Home"))
                        {
                            <input type="hidden" name="id" id="id" value="@collection.id" />
                            <input type="submit" class="btn btn-sm btn-outline-info" value="Показать коллекцию" />
                        }

                    </td>
                </tr>
                //}

            }
        </table>
        @using (Html.BeginForm("CreateCollection", "Home", FormMethod.Get))
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Создать коллекцию" class="btn btn-default" />
                </div>
            </div>
        }

    </dl>
</div>